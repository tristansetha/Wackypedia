@{
  Layout = "_Layout";
}
@Html.Partial("_Header")
@using Wackypedia.Models;

<h2>Edit Article Title:</h2>
<form action="/articles/@Model.GetID()" method="post">
  <div class="form-group">
    <label for="title">Title:</label>
    <textarea id="title" name="title" type="text" rows="3" class="form-control" required>@Model.GetTitle()</textarea>
  </div>
  <div class="form-group">
    <label for="author">Name of contributor:</label>
    <input id="author" name="author" type="text" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-info">Edit:</button>
</form>
